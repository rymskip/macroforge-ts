{
	"name": "macroforge",
	"version": "0.0.1",
	"description": "High-performance Rust-powered macro system for TypeScript using Vite, NAPI-RS, and SWC",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*",
		"playground/macro",
		"playground/svelte",
		"playground/vanilla"
	],
	"scripts": {
		"dev": "npm run dev -w svelte",
		"build": "npm run build:rust && npm run build:plugin",
		"build:rust": "cd crates/swc-napi-macros && napi build --platform --release",
		"build:plugin": "npm run build -w vite-plugin-napi-macros",
		"build:@playground/macro": "cd playground/macro && npm run build",
		"test": "npm run test:rust && npm test --workspaces --if-present && node --test playground/tests/examples.test.mjs",
		"test:rust": "cargo test --workspace",
		"test:playground": "node --test playground/tests/examples.test.mjs",
		"test:e2e:zed": "./tests/e2e/run-zed-test.sh",
		"test:e2e:zed:verbose": "./tests/e2e/run-zed-test.sh --verbose",
		"test:e2e:zed:node": "node --test tests/e2e/zed-extension-startup.test.js",
		"diagnostics": "node scripts/diagnostics.cjs",
		"diagnostics:log": "node scripts/diagnostics.cjs --log",
		"macro:expand": "cargo run -p ts_macro_cli -- expand --use-node",
		"macro:tsc": "cargo run -p ts_macro_cli -- tsc",
		"expand:playground": "node scripts/expand-playground.cjs"
	},
	"devDependencies": {
		"@napi-rs/cli": "^3.4.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.0",
		"@types/node": "^22.10.2",
		"@vtsls/language-server": "^0.2.9",
		"svelte-language-server": "file:packages/language-server",
		"typescript": "^5.9.3",
		"vite": "^7.2.4"
	},
	"engines": {
		"node": ">=24.9.0"
	}
}
