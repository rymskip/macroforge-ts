{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"extends": ["../biome.json"],
	"overrides": [
		{
			"includes": ["**/*.svelte"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					},
					"style": {
						"useConst": "off",
						"useImportType": "off"
					}
				}
			},
			"assist": {
				"actions": { "source": { "organizeImports": "off" } }
			}
		}
	]
}
