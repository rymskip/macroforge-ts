			"initialization_options": {
				"autoUseWorkspaceTsdk": true,
				"typescript": {
					"tsdk": "/Users/jakoblochinski/Softworks/GitHub/macroforge/node_modules/typescript/lib"
				},
				"tsserver": {
				    "maxTsServerMemory": 8192,
                    "nodePath": "/Users/jakoblochinski/.pixi/envs/nodejs/bin/node",
					"logDirectory": "/Users/jakoblochinski/Softworks/GitHub/macroforge/.tsserver-logs",
					"logVerbosity": "verbose",
					"globalPlugins": [
						{
							"name": "tsserver-plugin-macroforge",
							"location": "/Users/jakoblochinski/Softworks/GitHub/macroforge/packages/tsserver-plugin-macroforge",
							"enableForWorkspaceTypeScriptVersions": true
						}
					]
				}
			}
		}
	}
