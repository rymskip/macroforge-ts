{
	"format_on_save": "on",
	"languages": {
		"JavaScript": {
			"formatter": {
				"external": {
					"command": "npx",
					"arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
				}
			},
			"language_servers": ["eslint", "!biome"],
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
		"TypeScript": {
			"formatter": {
				"external": {
					"command": "npx",
					"arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
				}
			},
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
		"Svelte": {
			"formatter": {
				"external": {
					"command": "npx",
					"arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
				}
			},
			"language_servers": [
				"ts-derive-svelte",
				"eslint",
				"!svelte-language-server",
				"!biome"
			],
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		}
	},
	"lsp": {
		"vtsls": {
			"initialization_options": {
				"autoUseWorkspaceTsdk": true,
				"typescript": {
					"tsdk": "/Users/jakoblochinski/Softworks/GitHub/ts-macros/node_modules/typescript/lib"
				},
				"tsserver": {
					"logDirectory": "/Users/jakoblochinski/Softworks/GitHub/ts-macros/.tsserver-logs",
					"logVerbosity": "verbose",
					"globalPlugins": [
						{
							"name": "ts-derive-plugin",
							"location": "/Users/jakoblochinski/Softworks/GitHub/ts-macros/packages/ts-derive-plugin",
							"enableForWorkspaceTypeScriptVersions": true
						}
					]
				}
			}
		}
	}
}
